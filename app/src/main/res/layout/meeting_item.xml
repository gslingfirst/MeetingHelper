<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/meeting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/meeting_icon_new"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/meeting_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"
            android:text="会议主题:" />

        <TextView
            android:id="@+id/meeting_item_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/name_1"
            app:layout_constraintBaseline_toBaselineOf="@id/name_1"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"
            android:text="topic" />

        <TextView
            android:id="@+id/name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_1"
            app:layout_constraintLeft_toRightOf="@id/meeting_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorYellow"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="会议室:" />

        <TextView
            android:id="@+id/meeting_item_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/name_2"
            app:layout_constraintBaseline_toBaselineOf="@id/name_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorYellow"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="301" />
        <TextView
            android:id="@+id/name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_2"
            app:layout_constraintLeft_toRightOf="@id/meeting_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"
            android:text="会议时间:" />
        <TextView
            android:id="@+id/meeting_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/name_3"
            app:layout_constraintBaseline_toBaselineOf="@id/name_3"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"
            android:text="2019-12-26 3:00-5:00" />
        <TextView
            android:id="@+id/name_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_3"
            app:layout_constraintLeft_toRightOf="@id/meeting_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"
            android:text="会议地点:" />
        <TextView
            android:id="@+id/meeting_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/name_4"
            app:layout_constraintBaseline_toBaselineOf="@id/name_4"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"
            android:text="理科二号楼" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
